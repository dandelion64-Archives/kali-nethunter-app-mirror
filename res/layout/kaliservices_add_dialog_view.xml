<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="18sp"
                android:textColor="@color/accent_material_dark"
                android:text="@string/title"/>

            <EditText
                android:id="@+id/f_kaliservices_add_adb_et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:inputType="text"
                android:hint="@string/enter_your_title_name_here"
                android:autofillHints="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="0.9"
                    android:textSize="18sp"
                    android:textColor="@color/accent_material_dark"
                    android:text="@string/command_for_starting_the_service"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/f_kaliservices_add_btn_info_fab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_action_information"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:elevation="6dp"
                    app:fabCustomSize="32dp"
                    app:pressedTranslationZ="12dp"
                    android:contentDescription="@string/todo" />
            </LinearLayout>

            <EditText
                android:id="@+id/f_kaliservices_add_adb_et_startcommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:autofillHints=""
                tools:ignore="LabelFor,TextFields" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="0.9"
                    android:textSize="18sp"
                    android:textColor="@color/accent_material_dark"
                    android:text="@string/command_for_stopping_the_service"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/f_kaliservices_add_btn_info_fab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_action_information"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:elevation="6dp"
                    app:fabCustomSize="32dp"
                    app:pressedTranslationZ="12dp"
                    android:contentDescription="@string/todo" />
            </LinearLayout>

            <EditText
                android:id="@+id/f_kaliservices_add_adb_et_stopcommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:autofillHints=""
                tools:ignore="LabelFor,TextFields" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="0.9"
                    android:textSize="18sp"
                    android:textColor="@color/accent_material_dark"
                    android:text="@string/string_for_checking_the_service"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/f_kaliservices_add_btn_info_fab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    app:srcCompat="@drawable/ic_action_information"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:elevation="6dp"
                    app:fabCustomSize="32dp"
                    app:pressedTranslationZ="12dp"
                    android:contentDescription="@string/todo" />
            </LinearLayout>

            <EditText
                android:id="@+id/f_kaliservices_add_adb_et_checkstatuscommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:autofillHints=""
                tools:ignore="LabelFor,TextFields" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/f_kaliservices_add_adb_checkbox_runonboot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/runonchrootstart"
                    android:textSize="18sp"
                    android:textColor="@color/accent_material_dark"
                    android:layout_marginStart="4dp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/f_kaliservices_add_btn_info_fab4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_action_information"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    app:elevation="6dp"
                    app:fabCustomSize="32dp"
                    app:pressedTranslationZ="12dp"
                    android:contentDescription="@string/todo" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="18sp"
                android:textColor="@color/accent_material_dark"
                android:text="@string/position_to_insert">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Spinner
                    android:id="@+id/f_kaliservices_add_adb_spr_positions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:entries="@array/array_insert_position">
                </Spinner>
                <Spinner
                    android:id="@+id/f_kaliservices_add_adb_spr_titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp">
                </Spinner>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>